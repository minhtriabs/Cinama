@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/assets/css/style-t.css">
</head>
<body>
    <div class="container-fluid b-full ">
        <div class="row">
            <div class="col-md-4 offset-md-4 form__y">
                <form asp-area="Admin" asp-controller="Home" asp-action="Index" method="POST" class="form" id="form-1">
                    <h3 class="heading">Admin đăng nhập</h3>
                    <div class="form-group">
                        <label for="username" class="f-size form-label w-100">Tài khoản</label>
                        <input id="username" class="w-100 " name="username" type="text" placeholder="Nhập tài khoản...">
                        <span class="form-message"></span>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label w-100">Password</label>
                        <input id="password" class="w-100" name="password" type="password" placeholder="Nhập mật khẩu...">
                        <span class="form-message"></span>
                    </div>
                    <div class="spacer"></div>
                    <div class="form-group">
                        <button btn-id="submit" type="submit" class="btn btn-primary btn-lg btn-block">ĐĂNG NHẬP</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script src="~/lib/js/jquery.min.js"></script>
    <script src="~/assets/js/login.js"></script>
    <script>
        var btnLogin = document.querySelector('button[btn-id="submit"]');
        if(btnLogin){
            Validator({
            form: '#form-1',
            errorSelector : '.form-message',
            rules: [
                Validator.isUsername('#username'),
                Validator.isPassword('#password',6)
            ],
            onSubmit: function(data){
                console.log(data);
            }
        });
        }
    </script>
</body>
</html>