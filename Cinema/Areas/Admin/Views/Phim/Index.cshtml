                @Html.DisplayNameFor(model => model.Rated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/assets/images/@Html.DisplayFor(modelItem => item.AnhPhim)" class="img-movie" alt="Responsive image">
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenPhim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDienVien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNgonNgu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheLoai)
