            <td>
                @Html.DisplayFor(modelItem => item.TenPhuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaoDien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhoiChieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThoiLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDPhim">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDPhim">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDPhim">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
