@model IEnumerable<Cinema.Areas.Admin.Models.PhimModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AnhPhim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenPhim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenDienVien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenNgonNgu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TheLoai)
